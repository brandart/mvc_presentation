<Page x:Class="V02_MVC.View.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:V02_MVC.View"
      mc:Ignorable="d" 
      xmlns:contrl="clr-namespace:V02_MVC.Controller"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">
    <Page.DataContext>
        <contrl:LoginController/>
    </Page.DataContext>

    <Grid>
        <Label Content="{Binding Path=Model.LogedIn}" HorizontalAlignment="Left" Margin="221,123,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLoginName" HorizontalAlignment="Left" Height="23" Margin="221,154,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loginButton" Content="Button" HorizontalAlignment="Left" Margin="221,186,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Path=LoginCommand}" CommandParameter="{Binding ElementName=txtLoginName, Path=Text}"/>
    </Grid>
</Page>
